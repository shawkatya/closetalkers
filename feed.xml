---
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.podcast.title }}</title>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ site.url }}{{ site.baseurl }}/feed.xml" rel="self" type="application/rss+xml"/>
    <language>{{ site.podcast.language }}</language>
    <copyright>{{ site.podcast.copyright }}</copyright>
    <description>{{ site.podcast.description }}</description>
    
    <!-- iTunes Tags -->
    <itunes:author>{{ site.podcast.author }}</itunes:author>
    <itunes:summary>{{ site.podcast.summary }}</itunes:summary>
    <itunes:owner>
      <itunes:name>{{ site.podcast.owner_name }}</itunes:name>
      <itunes:email>{{ site.podcast.owner_email }}</itunes:email>
    </itunes:owner>
    <itunes:image href="{{ site.url }}{{ site.baseurl }}/{{ site.podcast.image }}"/>
    <itunes:explicit>{{ site.podcast.explicit | default: 'false' }}</itunes:explicit>
    <itunes:type>{{ site.podcast.type }}</itunes:type>
    {% for category in site.podcast.categories %}
    <itunes:category text="{{ category.name | xml_escape }}">
      {% if category.subcategory %}<itunes:category text="{{ category.subcategory | xml_escape }}"/>{% endif %}
    </itunes:category>
    {% endfor %}
    
    {% for post in site.posts %}
    {% if post.podcast %}
    <item>
      <title>{{ post.title | xml_escape }}</title>
      <link>{{ site.url }}{{ post.url }}</link>
      <guid isPermaLink="false">{{ post.podcast.guid }}</guid>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      <description>{{ post.podcast.summary | xml_escape }}</description>
      <enclosure url="{{ post.podcast.audio_url }}" length="{{ post.podcast.file_size }}" type="audio/mpeg"/>
      <itunes:author>{{ site.podcast.author }}</itunes:author>
      <itunes:summary>{{ post.podcast.summary | xml_escape }}</itunes:summary>
      <itunes:duration>{{ post.podcast.duration }}</itunes:duration>
      <itunes:explicit>{{ post.podcast.explicit | default: 'false' }}</itunes:explicit>
      <itunes:episodeType>{{ post.podcast.episode_type }}</itunes:episodeType>
      <itunes:season>{{ post.podcast.season }}</itunes:season>
      {% if post.podcast.episode %}<itunes:episode>{{ post.podcast.episode }}</itunes:episode>{% endif %}
    </item>
    {% endif %}
    {% endfor %}
    
  </channel>
</rss>
